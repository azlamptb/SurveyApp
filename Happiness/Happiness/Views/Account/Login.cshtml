@model Happiness.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/Survey_login.cshtml";
}

<div class="center-block w-xxl w-auto-xs p-y-md">
    <div class="navbar">
        <div class="pull-center">
            @Html.Partial("~/Views/Shared/Partialviews/blocks/navbar.brand.cshtml")
        </div>
    </div>
    <div class="p-a-md box-color r box-shadow-z1 text-color m-a">
        <div class="m-b text-sm">
            Sign in with your Flatkit Account
     
        </div>
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            <form name="form">
                <div class="md-form-group float-label">
                    <input type="text" name="UserName" class="md-input" ng-model="user.email" required>
                     @Html.ValidationMessageFor(m => m.UserName)
                    <label>UserName</label>
                </div>
                <div class="md-form-group float-label">
                    <input type="password" class="md-input" name="Password" ng-model="user.password" required>
                    @Html.ValidationMessageFor(m => m.Password)
                    <label>Password</label>
                </div>
                <div class="m-b-md">
                    <label class="md-check">
                        @* @Html.CheckBoxFor(m => m.RememberMe)*@
                        <input type="checkbox" value="true" name="RememberMe">
                        <i class="primary"></i> Keep me signed in
                    </label>
                </div>
                <button type="submit" class="btn primary btn-block p-x-md">Sign in</button>
                <br />
                 @Html.ValidationSummary(true)
            </form>
        }
    </div>

    <div class="p-v-lg text-center">
        <div class="m-b"><a ui-sref="access.forgot-password" href="#/access/forgot-password" class="text-primary _600">Forgot password?</a></div>
        <div>Do not have an account? <a ui-sref="access.signup" href="#/access/signup" class="text-primary _600">Sign up</a></div>
    </div>
</div>

















