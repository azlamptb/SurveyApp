        <div class="table-responsive" name="tblpermission">
            @using (Html.BeginForm(new { @action = "Permission" }))
            {
                @Html.AntiForgeryToken()   
                <form role="form">
                    <table id="example1" class="table table-striped b-t b-b">
                        <thead>
                            <tr>
                                <th>Form Name</th>
                                <th>Permission</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i=0;}
                            @foreach (var permission in Model)
                            {
                                <tr>
                                    <td><input type="text" value="@permission.MenuName" class="form-control" style="border:none" readonly="true" name="Permission[@i].MenuName"  /></td>
                                    <td>
                                        <div class="checkbox">
                                            <label class="ui-check ui-check-md">
                                                @if (permission.permission ==true)
                                                {
                                                <input type="checkbox" checked="checked" id="ischckqus" value="true" name="Permission[@i].permission">
                                                }
                                                else
                                                {
                                                  <input type="checkbox" id="ischckqus" value="true" name="Permission[@i].permission">
                                                }
                                                <i class="dark-white"></i>
                                            </label>
                                        </div>
                                    </td>
                                    <td style="display:none">
                                        <input type="text" value="@permission.rolName" readonly="true" name="Permission[@i].rolName"  />                
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                    <br />
                    <button style="margin-left:50px;width:auto" type="submit" class="md-btn md-raised m-b-sm w-xs orange">Apply Permissions</button>
                    <br />
                    @Html.ActionLink("Back to List", "RoleIndex", "Account", new { @style="margin-left:50px"})
                </form>
            }
        </div>
    </div>
</div>
