@model Happiness.Models.CompanyModel
@{
    ViewBag.Title = "Settings - company";
    Layout = "~/Views/Shared/_SurveyLayout.cshtml";
}

<div class="padding">
    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h2>Company</h2>
                    <small>Create and Update Company</small>
                </div>
                <div class="box-divider m-a-0"></div>
                <div class="box-body">
                    @using (Html.BeginForm(new { @role = "form" }))
                    {
    @Html.AntiForgeryToken()   
                    <form role="form">
                        <input  type="text" style="visibility:hidden" name="id" class="form-control" value="@ViewBag.id"/>  
                        <div class="form-group">
                            <label>Company Name</label>
                            <input  type="text" name="CompanyName" class="form-control" value="@ViewBag.CompanyName"/>      
                            @Html.ValidationMessageFor(model => model.CompanyName)
                        </div>  
                        <div class="form-group">
                            <label>Address</label>
                           <input  type="text" name="Address" class="form-control" value="@ViewBag.Address"/>                            
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>     
                        <div class="form-group">
                            <label>Mobile</label>
                            <input  type="text" name="Mob" class="form-control" value="@ViewBag.Mob"/>
                            @Html.ValidationMessageFor(model => model.Mob)
                        </div>     
                        <div class="form-group">
                            <label>Telephone</label>
                            <input  type="text" name="Tel" class="form-control" value="@ViewBag.Tel"/>
                            @Html.ValidationMessageFor(model => model.Tel)
                        </div> 
                        <div class="form-group">
                            <label>Fax</label>
                            <input  type="text" name="Fax" class="form-control" value="@ViewBag.Fax"/>
                            @Html.ValidationMessageFor(model => model.Fax)
                        </div> 
                        <div class="form-group">
                            <label>Email</label>
                            <input  type="text" name="EmailId" class="form-control" value="@ViewBag.EmailId"/>
                            @Html.ValidationMessageFor(model => model.EmailId)
                        </div> 
                        <button type="submit" class="md-btn md-raised m-b-sm w-xs orange">Submit</button>
                        <br />
                         @*@Html.ActionLink("Back to List", "Index", "ReportingAuthority")*@
                        @Html.ValidationSummary()
                    </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
